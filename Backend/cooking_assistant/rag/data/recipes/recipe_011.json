  "ingredients": [
    "6 eggs",
    "400ml coconut milk",
    "200g palm jaggery (hakuru), melted",
    "1/2 tsp cardamom powder",
    "1/2 tsp nutmeg",
    "Few cashew nuts"
  ],
  "instructions": [
    "Beat eggs well",
    "Add melted jaggery",
    "Add coconut milk, cardamom, nutmeg",
    "Strain mixture",
