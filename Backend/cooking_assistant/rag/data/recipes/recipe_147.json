  "ingredients": [
    "500g mixed dried fruits",
    "200ml brandy",
    "250g butter",
    "250g sugar",
    "5 eggs",
    "300g flour",
    "1 tsp baking powder",
    "1 tsp mixed spice",
    "1 tsp vanilla",
    "Treacle"
